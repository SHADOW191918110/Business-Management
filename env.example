# Environment Variables for POS-App
# Copy this file to .env and update the values as needed

# Application Configuration
APP_NAME=POS-App
APP_VERSION=1.0.0
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://admin:admin123@localhost:27017/pos_app?authSource=admin
MONGODB_DATABASE=pos_app

# For production, use stronger passwords
MONGODB_ADMIN_PASSWORD=admin123

# Redis Configuration (optional)
REDIS_URL=redis://:redis123@localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-with-64-chars-minimum
JWT_EXPIRES_IN=24h

# API Configuration
API_PORT=3000
API_HOST=localhost

# Tauri Configuration
TAURI_ENV=development

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/pos-app.log

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@pos-app.com

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_SCHEDULE=0 2 * * *

# Development Settings
DEV_MODE=true
MOCK_DATA=true

# Security Settings
CORS_ORIGIN=http://localhost:1420
SESSION_SECRET=another-super-secret-key-for-sessions

# Hardware Integration
PRINTER_TYPE=thermal
SCANNER_PORT=COM3
CASH_DRAWER_PORT=COM4

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,ja

# Business Settings
DEFAULT_TAX_RATE=0.10
CURRENCY=USD
CURRENCY_SYMBOL=$
DECIMAL_PLACES=2

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_BARCODE_SCANNER=true
ENABLE_RECEIPT_PRINTER=true
ENABLE_CUSTOMER_DISPLAY=false
ENABLE_LOYALTY_PROGRAM=true
ENABLE_MULTI_LOCATION=false

# Analytics (optional)
ANALYTICS_ENABLED=false
ANALYTICS_API_KEY=

# License
LICENSE_KEY=
LICENSE_TYPE=trial